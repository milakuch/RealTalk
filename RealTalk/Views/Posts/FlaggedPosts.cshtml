@model IEnumerable<RealTalk.Models.Post>

@{
    ViewBag.Title = "FlaggedPosts";
}

<h2 class="text-light">Flagged Posts</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<div class="row ">
    <table class="table text-light mt-4 ">
        <thead class="bgblue txtdark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Content)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                        @Html.ActionLink("Remove Flag", "RemoveFlag", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
